<h1>Cocktail details</h1>
<h4>Name: <%= @cocktail.name %></h4>
<p>What you need to make:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "delete item", dose_path(dose),  method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<h3>Add ingredient:</h3>
<%= simple_form_for [@cocktail, @dose]  do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>


<%= link_to "Back to all cocktails", cocktails_path %>
