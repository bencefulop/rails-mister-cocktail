<h1>Cocktail details</h1>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <%= cl_image_tag("https://res.cloudinary.com/dvxd5rkn7/image/upload/v1599199607/no-image-found-360x250_copy_vpbavh.jpg", width: 360, height: 250, crop: :fill) %>
<% end %>
<h4>Name: <%= @cocktail.name %></h4>
<p>What you need to make:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "delete item", dose_path(dose),  method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<h3>Add ingredient:</h3>
<%= simple_form_for [@cocktail, @dose]  do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
  <%= f.button :submit %>
<% end %>


<%= link_to "Back to all cocktails", root_path %>
